<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_15sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_starImage"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/lightBlack"
            android:text="Mar 24,2022"/>
        <ImageView
            android:layout_marginLeft="8dp"
            android:id="@+id/iv_starImage"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_article"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textArticleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asadsadasd"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/ImageArticleLayout"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp"
            android:scaleType="fitXY"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:id="@+id/ll_read_articles"
            android:layout_width="75dp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_marginRight="8dp"
            android:layout_height="35dp">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:text="Read"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_toRightOf="@id/ll_read_articles"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/lightBlack"
            android:layout_centerVertical="true"
            android:text="10 min read"/>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/tv_..."
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textSize="30dp"
            android:src="@drawable/settingsong_article"/>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imHeartArticlesLayout"
            android:layout_toLeftOf="@id/tv_..."
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2article"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imHeartArticlesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/save_article"/>

    </RelativeLayout>





</androidx.appcompat.widget.LinearLayoutCompat>