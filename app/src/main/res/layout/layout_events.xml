<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/_15sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/ivEventLayout"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/eventcard2__event"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textDateEventLayout"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat,Nav 11,7 PM"
        android:textColor="@color/lightBlack"/>
    <TextView
        android:id="@+id/textEventNameEventLayout"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"/>
    <TextView
        android:id="@+id/textnameEventLayout"
        android:layout_marginTop="8dp"
        android:text="Robat, Morocco"
        android:textColor="@color/lightBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>






</LinearLayout>